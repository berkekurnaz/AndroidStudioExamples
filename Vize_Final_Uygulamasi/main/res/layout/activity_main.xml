<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vize Notunuz"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:fontFamily="sans-serif-smallcaps"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/TxtVize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="24sp"
            android:textAlignment="center"
            app:fontFamily="sans-serif-smallcaps" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Final Notunuz"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="20dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/TxtFinal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textSize="24sp"
            android:textAlignment="center"
            app:fontFamily="sans-serif-smallcaps" />

        <Button
            android:id="@+id/BtnHesapla"
            style="@android:style/TextAppearance.Holo.SearchResult.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/holo_blue_light"
            android:padding="20dp"
            android:text="Hesapla"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:fontFamily="sans-serif-smallcaps" />

        <TextView
            android:id="@+id/LblSonuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Ortalama : 00"
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp"
            app:fontFamily="sans-serif-smallcaps" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>